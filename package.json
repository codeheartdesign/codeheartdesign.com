{
	"scripts": {
		"build:css": "postcss code/css/site.css --output code/assets/css/site.min.css --no-map",
		"build:site": "cuttlebelle",
		"build:pages": "npm run build:site",
		"build:favicons": "mv docs/assets/favicons/* docs/ && rm -r docs/assets/favicons",
		"build": "npm run build:css && npm run build:pages && npm run build:favicons",
		"watch:css": "onchange 'code/css/*.css' -- npm run build:css",
		"watch:site": "onchange 'code/**' 'content/**' -- npm run build:pages",
		"watch": "npm run build && npm run watch:css | npm run watch:site | npm run server",
		"server": "browser-sync start --server 'docs' --files 'docs'"
	},
	"dependencies": {},
	"cuttlebelle": {
		"folder": {
			"code": "code/layout",
			"assets": "code/assets",
			"site": "docs",
			"docs": "docs/docs"
		}
	},
	"devDependencies": {
		"autoprefixer": "^9.1.2",
		"browser-sync": "^2.24.7",
		"cuttlebelle": "^1.0.0-alpha.56",
		"cssnano": "^4.0.5",
		"moment": "^2.22.2",
		"onchange": "^4.1.0",
		"postcss-cli": "^6.0.0"
	}
}
